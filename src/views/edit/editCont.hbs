<div class="container mt-4 mb-4">
    <div class="row">
        <div class="col-md-5 offset-md-3">
            <div class="card card-body bg-dark p-4 text-white rounded-0">
    <h1>Actualiza un contenedor</h1>
    <form action="/conts/{{cont._id}}/edit" method="POST">
    
    <div class="mb-3">
        <input type="text" name="registro" placeholder="Registro" value="{{cont.registro}}" class="form-control rounded-0 bg-dark text-white">
    </div>
    <div class="mb-3">
        <input type="text" name="distrito" placeholder="distrito" value="{{cont.distrito}}" class="form-control rounded-0 bg-dark text-white">
    </div>
        <div class="mb-3">
        <input type="text" name="ubicacion" placeholder="ubicacion" value="{{cont.ubicacion}}" class="form-control rounded-0 bg-dark text-white">
    </div>
    <div class="mb-3">
        <textarea name="descripcion" rows="3" placeholder="Añada una descripción" class="form-control rounded-0 bg-dark text-white">
        {{cont.descripcion}}
    </textarea>
    </div>
    
    <button class="btn btn-primary">Modificar</button>
</form>
</div>
        </div>
    </div>
</div>