<div class="container mt-4 mb-4">
    <div class="row">
        <div class="col-md-5 offset-md-3">
            <div class="card card-body bg-dark p-4 text-white rounded-0">
    <h1>Actualiza un evento</h1>
    <form action="/evens/{{even._id}}/edit" method="POST">
    
    <div class="mb-3">
        <input type="text" name="registro" placeholder="registro" value="{{even.registro}}" class="form-control rounded-0 bg-dark text-white">
    </div>
    
    <div class="mb-3">
        <input type="text" name="nombreEvento" placeholder="nombreEvento" value="{{even.nombreEvento}}" class="form-control rounded-0 bg-dark text-white">
    </div>

    <div class="mb-3">
        <input type="text" name="organizacion" placeholder="organizacion" value="{{even.organizacion}}" class="form-control rounded-0 bg-dark text-white">
    </div>

    <div class="mb-3">
        <input type="fechaEvento" name="fechaEvento" placeholder="fechaEvento" value="{{even.fechaEvento}}" class="form-control rounded-0 bg-dark text-white">
    </div>

 
    <div class="mb-3">
        <input type="text" name="link" placeholder="link" value="{{even.link}}" class="form-control rounded-0 bg-dark text-white">
    </div>

    <button class="btn btn-primary">Modificar</button>
</form>
</div>
        </div>
    </div>
</div>