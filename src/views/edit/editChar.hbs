<div class="container mt-4 mb-4">
    <div class="row">
        <div class="col-md-5 offset-md-3">
            <div class="card card-body bg-dark p-4 text-white rounded-0">
    <h1>Actualiza una charla</h1>
    <form action="/chars/{{char._id}}/edit" method="POST">
    
    <div class="mb-3">
        <input type="text" name="registro" placeholder="registro" value="{{char.registro}}" class="form-control rounded-0 bg-dark text-white">
    </div>
    
    <div class="mb-3">
        <input type="text" name="nombreCharla" placeholder="nombreCharla" value="{{char.nombreCharla}}" class="form-control rounded-0 bg-dark text-white">
    </div>

    <div class="mb-3">
        <input type="text" name="expositor" placeholder="expositor" value="{{char.expositor}}" class="form-control rounded-0 bg-dark text-white">
    </div>

    <div class="mb-3">
        <input type="fechaCharla" name="fechaCharla" placeholder="fechaCharla" value="{{char.fechaCharla}}" class="form-control rounded-0 bg-dark text-white">
    </div>

    </div>
        <div class="mb-3">
        <input type="text" name="link" placeholder="link" value="{{char.link}}" class="form-control rounded-0 bg-dark text-white">
    </div>

    <button class="btn btn-primary">Modificar</button>
</form>
</div>
        </div>
    </div>
</div>